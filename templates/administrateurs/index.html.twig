{% extends 'base.html.twig' %}

{% block title %}Administrateurs index{% endblock %}

{% block body %}
    <h1>Administrateurs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_admin</th>
                <th>Nom_utilisateur</th>
                <th>Mot_de_passe_hash</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for administrateur in administrateurs %}
            <tr>
                <td>{{ administrateur.id }}</td>
                <td>{{ administrateur.idAdmin }}</td>
                <td>{{ administrateur.nomUtilisateur }}</td>
                <td>{{ administrateur.motDePasseHash }}</td>
                <td>
                    <a href="{{ path('app_administrateurs_show', {'id': administrateur.id}) }}">show</a>
                    <a href="{{ path('app_administrateurs_edit', {'id': administrateur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_administrateurs_new') }}">Create new</a>
{% endblock %}
