{% extends 'base.html.twig' %}

{% block title %}Configuration du Site{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg register-card" style="background-color: rgba(0, 0, 0, 0.2); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2);">
                <div class="card-body p-4 p-md-5">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="m-0">Configuration du Site</h1>
                        <a href="{{ path('app_configurations_site_new') }}" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Créer une nouvelle configuration
                        </a>
                    </div>

                    {% if configurations_sites is not empty %}
                        {% for config in configurations_sites %}
                            <div class="list-group">
                                <div class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <div>
                                        <strong>Adresse :</strong> {{ config.adressePostale }}
                                    </div>
                                    <a href="{{ path('app_configurations_site_edit', {'id': config.id}) }}" class="btn btn-sm btn-outline-primary mt-2 mt-md-0">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>
                                </div>
                                <div class="list-group-item"><strong>Téléphone :</strong> {{ config.telephone }}</div>
                                <div class="list-group-item"><strong>Email :</strong> {{ config.emailContact }}</div>
                                <div class="list-group-item"><strong>Horaires :</strong> {{ config.horairesOuverture }}</div>
                                <div class="list-group-item"><strong>Facebook :</strong> <a href="{{ config.urlPageFacebook }}" target="_blank">{{ config.urlPageFacebook }}</a></div>
                                <div class="list-group-item"><strong>Instagram :</strong> <a href="{{ config.urlPageInstgram }}" target="_blank">{{ config.urlPageInstgram }}</a></div>
                                <div class="list-group-item"><strong>RDV Facebook :</strong> <a href="{{ config.urlPriseRdvFacebook }}" target="_blank">{{ config.urlPriseRdvFacebook }}</a></div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="alert alert-info text-center">
                            Aucune configuration trouvée.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}