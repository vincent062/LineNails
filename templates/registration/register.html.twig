{% extends 'base.html.twig' %}

{% block title %}Prendre rendez-vous{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg register-card" style="background-color: rgba(0, 0, 0, 0.2); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2);">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <img src="{{ asset('images/Gemini_Generated_Image_iy11sdiy11sdiy11-removebg-preview.png') }}" alt="LineNails Logo" style="max-height: 80px;" class="mb-2">
                        <h1 class="h3 mb-1">Prendre rendez-vous</h1>
                        <p class="text-white-50">L'Art au bout de vos doigts.</p>
                    </div>

                    {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(registrationForm.prenom, {'attr': {'required': 'required'}}) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(registrationForm.nom, {'attr': {'required': 'required'}}) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(registrationForm.email, {'attr': {'required': 'required'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(registrationForm.telephone, {'attr': {'required': 'required'}}) }}
                        </div>
                        
                        <div class="mb-4">
                            {{ form_row(registrationForm.date, {'attr': {'required': 'required'}}) }}
                        </div>

                        <hr class="my-4" style="border-color: rgba(255, 255, 255, 0.2);">

                        <div class="row">
                        {% for prestation in registrationForm.services %}
                            <div class="col-md-6 mb-3">
                                <div class="card service-card">
                                    <div class="card-body">
                                        <div class="form-check">
                                            {{ form_widget(prestation, {'attr': {'class': 'form-check-input'}}) }}
                                            {{ form_label(prestation, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Envoyer ma demande</button>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}