{% extends 'base.html.twig' %}

{% block title %}Portfolio - LineNails{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Notre Portfolio</h1>
        {# On n'affiche le bouton que si l'admin est connecté #}
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_portfolio_new') }}" class="btn btn-primary">
                Ajouter un projet
            </a>
        {% endif %}
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for portfolio_item in portfolios %}
            <div class="col">
                <div class="card shadow-sm h-100">
      <h5 class="card-header">{{ portfolio_item.nom }}</h5>
      
      {# Remplacer le SVG par une vraie image quand vous en aurez #}
      <svg ...>
        <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image du projet</text>
      </svg>
      
      <div class="card-body">
        {% if portfolio_item.service %}
            <h6 class="card-subtitle text-muted">{{ portfolio_item.service.nom }}</h6>
        {% endif %}
        <p class="card-text mt-2">Une brève description de ce magnifique projet d'onglerie.</p>
      </div>

      {% if is_granted('ROLE_ADMIN') %}
        <div class="card-footer bg-transparent">
             <a href="..." class="btn btn-sm btn-outline-secondary">Voir</a>
             <a href="..." class="btn btn-sm btn-outline-primary">Modifier</a>
        </div>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    Il n'y a aucun projet dans le portfolio pour le moment.
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}