{% extends 'base.html.twig' %}

{% block title %}Modifier la Réalisation{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg register-card" style="background-color: rgba(0, 0, 0, 0.2); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2);">
                <div class="card-body p-4 p-md-5">
                    <h1 class="text-center mb-4">Modifier la Réalisation</h1>

                    {{ include('portfolio/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_portfolio_index') }}" class="btn btn-outline-secondary">Retour à la liste</a>
                        {{ include('portfolio/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}