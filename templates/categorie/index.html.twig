{% extends 'base.html.twig' %}

{% block title %}Prestations{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-4">Mes Prestations</h1>
            <a href="{{ path('app_categorie_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Ajouter une prestations
            </a>
        </div>

       <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th class="text-end">Actions</th> {# <-- Nouvelle colonne #}
                    </tr>
                </thead>
                <tbody>
                {% for categorie in categories %}
                    <tr>
                        <td>{{ categorie.nom }}</td>
                        <td class="text-end">
                            {# --- DÉBUT DE L'AJOUT DU BOUTON SUPPRIMER --- #}
                            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i> Modifier
                            </a>
                            {# On inclut le formulaire de suppression ici #}
                            {{ include('categorie/_delete_form.html.twig') }}
                            {# --- FIN DE L'AJOUT --- #}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2" class="text-center">Aucune catégorie trouvée.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}