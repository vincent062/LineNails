{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}
    <h1>Services</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Id_service</th>
                <td>{{ service.idService }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ service.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ service.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ service.prix }}</td>
            </tr>
            <tr>
                <th>Duree_minutes</th>
                <td>{{ service.dureeMinutes }}</td>
            </tr>
            <tr>
                <th>Est_actif</th>
                <td>{{ service.estActif ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Id_categorie_service_fk</th>
                <td>{{ service.idCategorieServiceFk }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_services_index') }}">back to list</a>

    <a href="{{ path('app_services_edit', {'id': service.id}) }}">edit</a>

    {{ include('services/_delete_form.html.twig') }}
{% endblock %}
